<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/buttonTopGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Top Games" />

        <Button
            android:id="@+id/buttonTopStreams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Top Streams" />

        <Button
            android:id="@+id/buttonTopFeaturedStreams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Top Featured Streams" />

        <Button
            android:id="@+id/buttonTopCommunities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Top Communities" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

</RelativeLayout>
